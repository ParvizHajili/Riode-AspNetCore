@model RiodeUser
@{
    ViewData["Title"] = "Details";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>İstifadəçilər</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Form Components</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Cari İstifadəçiyə baxmaq</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h5>Basic Form Inputs</h5>
                    <span>
                        Add class of <code>.form-control</code> with
                        <code>&lt;input&gt;</code> tag
                    </span>


                    <div class="card-header-right">
                        <i class="icofont icofont-spinner-alt-5"></i>
                    </div>

                </div>
                <div class="card-block">
                    <h4 class="sub-title">Cari İstifadəçiyə baxmaq</h4>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">
                            Name
                        </label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.Name
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">
                            SurName
                        </label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.SurName
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">
                            UserName
                        </label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.UserName
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">
                            Email
                        </label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.Email
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">
                            EmailConfirmed
                        </label>
                        <div class="col-sm-10">
                            <p class="form-control">
                                @Model.EmailConfirmed
                            </p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12">
                            <div class="tab-control" role="tabcontrol">
                                <div class="tab-page" id="roles" aria-title="Rollar" selected>
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th style="max-width:100px">

                                                </th>
                                                <th>
                                                    Name
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Tuple<int, string, bool> item in ViewBag.Roles)
                                            {
                                                <tr>
                                                    <th>
                                                        <input type="checkbox" \
                                                        @(item.Item3 ? "checked" : "")
                                                               data-role-id="@item.Item1"
                                                               data-role-name="@item.Item2">
                                                    </th>
                                                    <th>
                                                        @item.Item2
                                                    </th>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <div class="tab-page" id="principals" aria-title="Səlahiyyətlər">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th style="max-width:100px">

                                                </th>
                                                <th>
                                                    Name
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (Tuple<string, bool> item in ViewBag.Principals)
                                            {
                                                <tr>
                                                    <th>
                                                        <input type="checkbox" \
                                                        @(item.Item2 ? "checked" : "")
                                                               data-principal-name="@item.Item1">
                                                    </th>
                                                    <th>
                                                        @item.Item1
                                                    </th>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-12">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzəliş Et</a>
                            <a asp-action="Index" class="btn btn-inverse">Siyahıya Qayıt</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section addjs{
    <script src="~/lib/tab-control.js"></script>
}
@section addcss{
    <link href="~/lib/tab-control.css" rel="stylesheet" />
}